<fw:AcrylicWindow x:Class="Caesar_Cypher.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caesar_Cypher"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        mc:Ignorable="d"
        Icon="/favicon-32x32.png"
        x:Name="ResultsWindow"
        Title="ResultWindow" Height="443" Width="500" Background="{x:Null}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="386*"/>
        </Grid.RowDefinitions>
        <Image Source="/caesar.jpg" Stretch="Fill" Margin="0,0,0,126" Grid.RowSpan="2"/>
        <TextBox x:Name="MainTextBox"  Style="{StaticResource TextBoxRevealStyle}" IsReadOnly="True" HorizontalAlignment="Center" Margin="0,250,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="500" Height="136" Grid.Row="1"/>

    </Grid>
</fw:AcrylicWindow>
