<fw:AcrylicWindow x:Class="UniversalPrimeGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversalPrimeGenerator"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        mc:Ignorable="d"
        Title="Генератор простых чисел" Height="450" Width="800" Background="{x:Null}">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="60,58,0,0" TextWrapping="Wrap" Foreground="{DynamicResource SystemBaseHighColorBrush}" Text="Генератор простых чисел" VerticalAlignment="Top" FontSize="24"/>
        <TextBox x:Name="bits" HorizontalAlignment="Left" Style="{DynamicResource TextBoxRevealStyle}"  Margin="60,141,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="176"/>
        <Label Foreground="{DynamicResource SystemBaseHighColorBrush}" Content="Количество бит в числе" HorizontalAlignment="Left" Margin="60,115,0,0" VerticalAlignment="Top"/>
    </Grid>
</fw:AcrylicWindow>
